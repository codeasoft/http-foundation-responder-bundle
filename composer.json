{
  "name": "codea/smart-reply-bundle",
  "description": "Integration of smart responder based on the Symfony HTTP Foundation",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "platform": {
      "php": "8.1.0",
      "ext-json": "1",
      "ext-intl": "1"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Codea\\Bundle\\SmartReply\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Codea\\Bundle\\SmartReply\\Test\\": "tests"
    }
  },
  "require": {
    "php": "^8.1",
    "codea/smart-reply": "dev-master",
    "symfony/framework-bundle": "5.*|6.*",
    "symfony/twig-bundle": "5.*|6.*"
  },
  "require-dev": {
    "phpstan/phpstan": "1.8.*",
    "phpstan/phpstan-phpunit": "1.1.*",
    "phpunit/phpunit": "9.5.*",
    "symplify/easy-coding-standard": "11.1.*"
  }
}
